<% include layout/header %>
<div class="cantai" style="display: flex; justify-content: center; align-items: center; height: 80vh; flex-direction: column;" >
    <!-- <div style="padding: 10px 0px;  border-radius: 7px; margin-bottom: 10px;"><i class="fas fa-home"></i> Dashboard </div> -->
    <form style="width: 500px; background-color: #fff; padding: 30px; border-radius: 5px;" method="post">
      <h2 style="color: rgb(0, 0, 0);">ตั้งค่าเวลา</h2><br>
        
        <div class="form-group">
            
          <label for="exampleInputEmail1">วันที่</label>
          <input type="date" name="date" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" required>
        </div>
        <div class="form-group">
            <label for="inputState">ประเภทการลา</label>
